<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <Script file="ClutchMessage.lua" />
    <Frame name="ClutchMessage" toplevel="true" parent="UIParent" movable="true" clampedToScreen="true" enableMouse="true" hidden="true">
        <Size>
            <AbsDimension x="200" y="100"/>
        </Size>
        <Anchors>
            <Anchor point="BOTTOM" relativeTo="MainMenuBar" relativePoint="TOP">
                <Offset>
                    <AbsDimension x="0" y="50"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
            <EdgeSize>	
                <AbsValue val="16"/>
            </EdgeSize>
            <TileSize>
                <AbsValue val="16"/>
            </TileSize>
            <BackgroundInsets>
                <AbsInset left="4" right="4" top="4" bottom="4"/>
            </BackgroundInsets>		
        </Backdrop>
        <Scripts>
            <OnLoad>
                self:SetBackdropBorderColor(0.5, 0.5, 0.5, 0.5);
                self:SetBackdropColor(TOOLTIP_DEFAULT_BACKGROUND_COLOR.r, TOOLTIP_DEFAULT_BACKGROUND_COLOR.g, TOOLTIP_DEFAULT_BACKGROUND_COLOR.b, 1);
                --self:Show() --Testing only!
            </OnLoad>					
        </Scripts>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentText" font="Fonts\FRIZQT__.TTF" text="ClutchMessage" justifyH="LEFT" justifyV="TOP">
                    <Color r="1" g="1" b="1" a="1"/>
                    <FontHeight val="12"/>
                    <Anchors>
                        <Anchor point="CENTER" relativeTo="$parent" x="20" y="-20" />
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
	</Frame>
</Ui>

